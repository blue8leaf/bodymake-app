<%= render "devise/shared/top_header"%>

<%= form_with model: @user, url: user_session_path, class: 'form-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="sns-login">
    <%= link_to image_tag("btn_google_signin.png", class:"google-btn"), user_google_oauth2_omniauth_authorize_path, method: :post%>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"mail@example.com", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"", autocomplete: "off"%>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"brown-btn" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/top_footer"%>
